mixin contact-form(data = {}, mods = {})
    form(action="#" method="post").contact-form&attributes(attributes)
        .form-fields
            .form-fields__inner
                .form-fields__field.form-fields__field_small
                    +form-group({
                        type: 'email',
                        id: 'contact-email',
                        name: 'email',
                        placeholder: 'Your Email *',
                        required: true,
                        label: 'Your email',
                        icon: 'envelope'
                    })
                .form-fields__field.form-fields__field_small
                    +form-group({
                        type: 'text',
                        id: 'contact-name',
                        name: 'name',
                        placeholder: 'Your Name *',
                        required: true,
                        label: 'Your name',
                        icon: 'user'
                    })
                .form-fields__field
                    +form-group({
                        type: 'text',
                        id: 'contact-subject',
                        name: 'subject',
                        placeholder: 'Your Subject *',
                        required: true,
                        label: 'Your subject',
                        icon: 'note'
                    })
                
                .form-fields__field
                    +form-group({
                        type: 'textarea',
                        id: 'contact-message',
                        name: 'message',
                        placeholder: 'Your Message *',
                        required: true,
                        label: 'Your message',
                        icon: 'bubbles',
                        rows: 6,
                    })
        
            +btn({text: 'Send message'}, {
                theme : 'primary',
                size  : 'large',
            })(type="submit").contact-form__submit